  "courseContent": [
    {
      "unitNumber": "1",
      "unitTitle": "Matrices",
      "content": [
        "1.1 Concept of Matrix",
        "1.2 Types of Matrices",
        "1.3 Addition, Subtraction and multiplication by scalar of matrices",
        "1.4 Product of two matrices",
        "1.5 Adjoint and Inverse of a matrix of order 2X2 and 3X3",
        "1.6 Solution of Simultaneous linear equations of two variables"
      ],
      "hours": 10,
      "weightage": 23
    },
    {
      "unitNumber": "2",
      "unitTitle": "Differentiation and its Applications",
      "content": [
        "2.1 Concept and Definition of Differentiation",
        "2.2 Working rules: Sum, Product, Division",
        "2.3 Chain Rule",
        "2.4 Derivative of Implicit functions",
        "2.5 Derivative of Parametric functions",
        "2.6 Logarithmic Differentiation",
        "2.7 Successive Differentiation up to second order",
        "2.8 Applications: Velocity, Acceleration, Maxima & Minima of given simple functions"
      ],
      "hours": 11,
      "weightage": 23
    },
    {
      "unitNumber": "3",
      "unitTitle": "Integration and its Applications",
      "content": [
        "3.1 Concept and Definition of Integration",
        "3.2 Working rules and Integral of standard functions",
        "3.3 Method of substitution",
        "3.4 Integration by parts",
        "3.5 Definite Integral and its properties",
        "3.6 Applications: Area and volume (Simple problems)"
      ],
      "hours": 10,
      "weightage": 20
    },
    {
      "unitNumber": "4",
      "unitTitle": "Differential Equations",
      "content": [
        "4.1 Concept and Definition, Order and Degree of differential equation",
        "4.2 Solution of DE of first degree and first order by Variable Separable method",
        "4.3 Solution of linear Differential equation"
      ],
      "hours": 7,
      "weightage": 17
    },
    {
      "unitNumber": "5",
      "unitTitle": "Statistics",
      "content": [
        "5.1 Mean for ungrouped and grouped data",
        "5.2 Mean deviation and Standard deviation about Mean for ungrouped and grouped data"
      ],
      "hours": 7,
      "weightage": 17
    }
  ],
