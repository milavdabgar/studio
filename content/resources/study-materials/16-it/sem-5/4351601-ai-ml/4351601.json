  "underpinningTheory": [
    {
      "unitNumber": "I",
      "unitTitle": "Fundamentals of Artificial Intelligence (AI)",
      "unitOutcomes": [
        {
          "id": "1a",
          "description": "Describe basic concept of Artificial Intelligence"
        },
        {
          "id": "1b", 
          "description": "Discuss areas of Artificial Intelligence"
        },
        {
          "id": "1c",
          "description": "Identify various applications of Artificial Intelligence"
        }
      ],
      "topics": [
        {
          "topicNumber": "1.1",
          "title": "Artificial Intelligence Introduction",
          "subtopics": [
            "Future of Artificial Intelligence",
            "Definition of AI",
            "History and Types of AI",
            "AI ethics and limitations"
          ]
        },
        {
          "topicNumber": "1.2",
          "title": "Artificial Intelligence Areas",
          "subtopics": [
            "Expert Systems",
            "Natural Language Processing",
            "Neural Networks",
            "Robotics",
            "Fuzzy Logic Systems"
          ]
        },
        {
          "topicNumber": "1.3",
          "title": "AI applications in various industries",
          "subtopics": [
            "Healthcare applications",
            "Finance applications",
            "Manufacturing applications",
            "Other industry applications"
          ]
        }
      ]
    },
    {
      "unitNumber": "II",
      "unitTitle": "Foundation of Machine Learning (ML)",
      "unitOutcomes": [
        {
          "id": "2a",
          "description": "Understand well posed learning problem in machine learning"
        },
        {
          "id": "2b",
          "description": "Describe different types of Machine learning"
        },
        {
          "id": "2c",
          "description": "Explain basic concepts of Reinforcement learning"
        },
        {
          "id": "2d",
          "description": "Compare types of Machine learning"
        }
      ],
      "topics": [
        {
          "topicNumber": "2.1",
          "title": "What is Machine Learning? Well-Posed learning Problem"
        },
        {
          "topicNumber": "2.2",
          "title": "Types of Machine Learning",
          "subtopics": [
            "Supervised Learning",
            "Unsupervised Learning", 
            "Reinforcement Learning"
          ]
        },
        {
          "topicNumber": "2.3",
          "title": "Reinforcement Learning",
          "subtopics": [
            "Terms, Key features",
            "Approaches to implement reinforcement learning: Value based, Policy Based, Model based",
            "Elements of reinforcement learning: Policy, reward signal, value function, Model",
            "Types of reinforcement learning: Positive and Negative Comparison"
          ]
        },
        {
          "topicNumber": "2.4",
          "title": "Comparison between Supervised, unsupervised and reinforcement learning"
        }
      ]
    },
    {
      "unitNumber": "III",
      "unitTitle": "Foundation of Neural Networks",
      "unitOutcomes": [
        {
          "id": "3a",
          "description": "Understand foundation of Neural networks"
        },
        {
          "id": "3b",
          "description": "Implement activation functions to build neural network"
        },
        {
          "id": "3c",
          "description": "Implement types of ANN"
        },
        {
          "id": "3d",
          "description": "Describe weight learning process in ANN"
        }
      ],
      "topics": [
        {
          "topicNumber": "3.1",
          "title": "Introduction to Neural Networks",
          "subtopics": [
            "Understanding the Biological Neuron",
            "Exploring the Artificial Neuron"
          ]
        },
        {
          "topicNumber": "3.2",
          "title": "Types of Activation Functions",
          "subtopics": [
            "ReLU",
            "Sigmoid",
            "Hyperbolic Tangent Function"
          ]
        },
        {
          "topicNumber": "3.3",
          "title": "Architectures of Neural Network",
          "subtopics": [
            "Single-layer feed forward network",
            "Multi-layer feed forward ANNs",
            "Recurrent network"
          ]
        },
        {
          "topicNumber": "3.4",
          "title": "Learning Process in ANN",
          "subtopics": [
            "Number of layers",
            "Direction of signal flow",
            "Number of nodes in layers",
            "Weight of interconnection between layers"
          ]
        },
        {
          "topicNumber": "3.5",
          "title": "Back Propagation"
        }
      ]
    },
    {
      "unitNumber": "IV",
      "unitTitle": "Foundation of Natural Language Processing (NLP)",
      "unitOutcomes": [
        {
          "id": "4a",
          "description": "Understand basics of NLP"
        },
        {
          "id": "4b",
          "description": "Discuss components of NLP"
        },
        {
          "id": "4c",
          "description": "Explain phases of NLP"
        },
        {
          "id": "4d",
          "description": "Apply data preprocessing techniques on text/paragraph/document"
        }
      ],
      "topics": [
        {
          "topicNumber": "4.1",
          "title": "Introduction To NLP",
          "subtopics": [
            "History of NLP",
            "Advantages of NLP",
            "Disadvantages of NLP"
          ]
        },
        {
          "topicNumber": "4.2",
          "title": "Components of NLP",
          "subtopics": [
            "Natural Language Understanding (NLU)",
            "Natural Language Generation (NLG)"
          ]
        },
        {
          "topicNumber": "4.3",
          "title": "Phases of NLP",
          "subtopics": [
            "Lexical Analysis",
            "Syntactic Analysis",
            "Semantic Analysis",
            "Discourse Integration",
            "Pragmatic Analysis"
          ]
        },
        {
          "topicNumber": "4.4",
          "title": "Data Preprocessing Using NLTK",
          "subtopics": [
            "Tokenization",
            "Frequency Distribution of Words",
            "Filtering Stop Words",
            "Stemming",
            "Lemmatization",
            "Parts Of Speech (POS) Tagging",
            "Name Entity Recognition",
            "WordNet"
          ]
        },
        {
          "topicNumber": "4.5",
          "title": "Types of Ambiguities in NLP"
        }
      ]
    },
    {
      "unitNumber": "V",
      "unitTitle": "Word Embedding in Natural Language Processing",
      "unitOutcomes": [
        {
          "id": "5a",
          "description": "Understand and Apply Word Embedding techniques"
        },
        {
          "id": "5b",
          "description": "Compare word embedding techniques"
        },
        {
          "id": "5c",
          "description": "Identify applications of NLP"
        }
      ],
      "topics": [
        {
          "topicNumber": "5.1",
          "title": "Word Embedding techniques",
          "subtopics": [
            "Term Frequency - Inverse Document Frequency (TFIDF)",
            "Bag Of Words (BoW)",
            "Word2Vec"
          ]
        },
        {
          "topicNumber": "5.2",
          "title": "Challenges with TF-IDF and BoW, Pre Trained word Embedding",
          "subtopics": [
            "Challenges with TF-IDF and BoW",
            "GloVe: Global Vector for word representation"
          ]
        },
        {
          "topicNumber": "5.3",
          "title": "Applications of NLP",
          "subtopics": [
            "Question Answering",
            "Spam Detection",
            "Sentiment analysis",
            "Machine Translation",
            "Spelling Correction",
            "Chatbot (ChatGPT)"
          ]
        }
      ]
    }
  ],

  "practicalExercises": [
    {
      "srNo": 1,
      "description": "Use Cancer Dataset for detecting whether the cancer cells in data are benign or malignant. The data contains 2 types of cancers: 1. benign cancer (B) and 2. malignant cancer (M). Use relevant ML techniques for the same.",
      "unitNo": "II",
      "hours": 4
    },
    {
      "srNo": 2,
      "description": "Implement following activation functions using python to build simple neural network: a. ReLU, b. Sigmoid, c. Tanh",
      "unitNo": "III",
      "hours": 6
    },
    {
      "srNo": 3,
      "description": "Implement following feed forward neural network using python programming: a. Single layer feed forward neural network, b. Multi-layer feed forward neural network",
      "unitNo": "III",
      "hours": 4
    },
    {
      "srNo": 4,
      "description": "Perform following data preprocessing on text/paragraph using NLTK library: a. Write a Python program to tokenize words, sentence wise, b. Write a python program that accepts the list of tokenized word and stems it into root word, c. Write a program in python to identify the part of speech for each word in the text, d. Write a Python NLTK program to remove stop words from a given text, e. Write a python program for identifying and correcting misspelled words in a given text, such as an essay or a letter",
      "unitNo": "IV",
      "hours": 6
    },
    {
      "srNo": 5,
      "description": "Implement following Word embedding techniques in NLP: a. TFIDF- Term Frequency Inverse document Frequency, b. BOW (Bag of Words), c. Word2Vec",
      "unitNo": "V",
      "hours": 4
    },
    {
      "srNo": 6,
      "description": "Implement Pre Trained word Embedding: GloVe Technique in NLP",
      "unitNo": "V",
      "hours": 4
    }
  ],

